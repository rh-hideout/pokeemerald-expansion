script PetalburgCity_PokemonCenter_1F_EventScript_Merchant {
    lock
    faceplayer
    message("How can I help you?")
    waitmessage
    pokemart(Petalburg_Center_Item_Mart)
	message("Come again soon!")
    release
    end
}

script PetalburgCity_PokemonCenter_1F_EventScript_Bookcase {
	msgbox (format("A collection of books about Hoenn, and how to identify different species."), MSGBOX_SIGN)
	end
}

script PetalburgCity_PokemonCenter_1F_EventScript_NatureGuy {
	lock
    faceplayer
    message("How can I help you?")
    waitmessage
    pokemart(Petalburg_Center_Mon_Mart)
    message("I'm always here!")
    release
    end
}